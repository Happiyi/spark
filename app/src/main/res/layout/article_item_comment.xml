<?xml version="1.0" encoding="utf-8"?>

<!-- 正文界面的评论item布局 -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bgColor">

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:paddingStart="12dp"
        android:paddingEnd="4dp"
        android:background="@color/transparent"
        android:textAlignment="viewStart"
        android:textColor="?attr/textColor"
        android:textSize="17sp"
        android:text="comment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="comment_author"
        android:textSize="13sp"
        android:textColor="@color/greyLite"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="comment_date"
        android:textSize="13sp"
        android:textColor="@color/greyLite"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comment_author"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/comment_readCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="comment_readCount"
        android:textSize="13sp"
        android:textColor="@color/greyLite"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/comment_textLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text="comment_textLength"
        android:textSize="13sp"
        android:textColor="@color/greyLite"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/comment_readCount"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>